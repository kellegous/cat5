{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNext",
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"allowJs": true,
		"baseUrl": "ui",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"paths": {
			"*": [
				"ui/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		],
		"sourceMap": true,
		"noImplicitAny": false,
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"include": [
		"./ui",
		"webpack.config.ts"
	]
}